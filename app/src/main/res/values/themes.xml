<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fimae" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_1</item>
        <item name="colorPrimaryVariant">@color/primary_2</item>
        <item name="colorOnPrimary">@color/text_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_1</item>
        <item name="colorSecondaryVariant">@color/secondary_2</item>
        <item name="colorOnSecondary">@color/text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>
    <style name="Theme.Fimae.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Fimae.AppBarOverlay" parent="ThemeOverlay.AppCompat.ActionBar"/>
    <style name="Theme.Fimae.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <!-- bottom sheet -->
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/shape_bottom_sheet</item>
    </style>
</resources>
