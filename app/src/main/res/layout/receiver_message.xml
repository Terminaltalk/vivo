<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginVertical="3dp"
        android:maxWidth="250dp"
        android:minWidth="50dp"
        android:minHeight="40dp"
>
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar_image_view"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_default_avatar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            android:layout_width="0dp" android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/avatar_image_view"
            app:layout_constraintTop_toTopOf="parent">
        <TextView
                android:id="@+id/incoming_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:background="@drawable/bubble_sender"
                android:backgroundTint="@color/gray_400"
                android:padding="10dp"
                android:inputType="textLongMessage|textMultiLine"
                android:maxWidth="180dp"
                android:minWidth="30dp"
                android:text="This is a message"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/avatar_image_view"/>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_images"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toStartOf="@+id/avatar_image_view"
                app:layout_constraintTop_toBottomOf="@+id/incoming_msg" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/avatar_image_view"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
