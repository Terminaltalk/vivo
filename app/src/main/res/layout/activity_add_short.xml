<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddShortActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp"
        android:theme="@style/Theme.Fimae.NoActionBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/text_white"
            app:popupTheme="@style/Theme.Fimae.PopupOverlay"
            app:navigationIcon="?attr/homeAsUpIndicator"
            app:titleTextColor="@color/text_white">
            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Tạo thước phim"
                style="@style/bold_20"
                android:textColor="@color/text_primary"
                />
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/appbar"
        app:layout_constraintBottom_toTopOf="@+id/btn_finish">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_add_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_image_video"
                    app:cardCornerRadius="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="100dp"
                    android:minHeight="150dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <ImageView
                        android:id="@+id/image_video"
                        android:background="@drawable/background_gradient"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        app:layout_constraintDimensionRatio="H,2:3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/ic_add"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_add_short"
                        android:backgroundTint="@color/background_button_dark_1_endColor"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/layout_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:minHeight="150dp"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintStart_toEndOf="@+id/card_image_video"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/diolog_item_background"
                    >
                    <EditText
                        android:id="@+id/tv_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:minHeight="150dp"
                        android:gravity="start|top"
                        android:hint="Mô tả thước phim tại đây..."
                        style="@style/regular_14"
                        android:background="@color/background_button_2"
                        android:maxLines="10"
                        />
                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <ImageView
                android:id="@+id/divided_shape"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@drawable/divided_shape"
                app:layout_constraintTop_toBottomOf="@id/layout_add_video"
                android:layout_marginTop="10dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <TextView
                android:id="@+id/tv_who_can_see"
                android:text="Ai có thể xem bài đăng này?"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                style="@style/bold_16"
                android:textColor="@color/text_primary"
                app:layout_constraintTop_toBottomOf="@id/divided_shape"
                android:layout_marginTop="10dp"
                android:paddingStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <worker8.com.github.radiogroupplus.RadioGroupPlus
                android:id="@+id/radio_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_who_can_see"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_public"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/diolog_item_background"
                    >

                    <ImageView
                        android:id="@+id/ic_earth"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_earth"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp"
                        app:layout_constraintStart_toEndOf="@+id/ic_earth"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/rb_public"
                        android:layout_marginEnd="20dp">
                        <TextView
                            android:id="@+id/tv_title_public"
                            android:text="Công khai"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            style="@style/bold_16"
                            android:textColor="@color/text_primary"
                            />

                        <TextView
                            android:id="@+id/tv_des_public"
                            android:text="Mọi người có thể thấy"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            style="@style/regular_12"
                            android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_public"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="0dp"
                        android:checked="false"
                        android:button="@drawable/radio_button_custom_background"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_friends"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/diolog_item_background">

                    <ImageView
                        android:id="@+id/ic_friends"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_user"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp"
                        app:layout_constraintStart_toEndOf="@+id/ic_friends"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/rb_friend"
                        android:layout_marginEnd="20dp">
                        <TextView
                            android:id="@+id/tv_title_friends"
                            android:text="Bạn bè"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            style="@style/bold_16"
                            android:textColor="@color/text_primary"
                            />

                        <TextView
                            android:id="@+id/tv_des_friends"
                            android:text="Những người theo dõi nhau trên Fimae có thể thấy"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            style="@style/regular_12"
                            android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_friend"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="0dp"
                        android:checked="false"
                        android:button="@drawable/radio_button_custom_background"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_private"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:paddingBottom="12dp"
                    android:paddingStart="20dp"
                    android:paddingEnd="10dp"
                    android:background="@drawable/diolog_item_background">

                    <ImageView
                        android:id="@+id/ic_private"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/ic_lock"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="15dp"
                        app:layout_constraintStart_toEndOf="@+id/ic_private"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/rb_private"
                        android:layout_marginEnd="20dp">
                        <TextView
                            android:id="@+id/tv_title_private"
                            android:text="Riêng tư"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            style="@style/bold_16"
                            android:textColor="@color/text_primary"
                            />

                        <TextView
                            android:id="@+id/tv_des_private"
                            android:text="Chỉ mình tôi"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_marginTop="5dp"
                            style="@style/regular_12"
                            android:textColor="@color/text_primary"/>
                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatRadioButton
                        android:id="@+id/rb_private"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="0dp"
                        android:checked="false"
                        android:button="@drawable/radio_button_custom_background"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </worker8.com.github.radiogroupplus.RadioGroupPlus>

            <TextView
                android:id="@+id/tv_allow_comment"
                android:text="Cho phép comment?"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                style="@style/bold_16"
                android:textColor="@color/text_primary"
                app:layout_constraintTop_toBottomOf="@id/radio_group"
                android:layout_marginTop="10dp"
                android:paddingStart="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_allow_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="12dp"
                android:paddingStart="20dp"
                android:background="@drawable/diolog_item_background"
                android:layout_marginTop="10dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingEnd="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_allow_comment"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                >

                <ImageView
                    android:id="@+id/ic_comment"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/ic_comment"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="15dp"
                    app:layout_constraintStart_toEndOf="@+id/ic_comment"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/cb_comment"
                    android:layout_marginEnd="20dp">
                    <TextView
                        android:id="@+id/tv_title_comment"
                        android:text="Bình luận"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        style="@style/bold_16"
                        android:textColor="@color/text_primary"
                        />

                    <TextView
                        android:id="@+id/tv_des_comment"
                        android:text="Mọi người có thể comment video"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:layout_marginTop="5dp"
                        style="@style/regular_12"
                        android:textColor="@color/text_primary"/>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/cb_comment"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="0dp"
                    android:checked="true"
                    android:button="@drawable/checkbox_custom_background"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/primary_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_finish"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Chia sẻ ngay"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/shape_rectangle_border_radius_btn_pink"
        android:textSize="20sp"
        android:fontFamily="@font/public_sans_semi_bold"
        style="@style/btn_can_click"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>